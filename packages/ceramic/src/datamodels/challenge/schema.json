{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Challenge",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "maxLength": 250
    },
    "story": {
      "$ref": "#/definitions/videoSources"
    },
    "video": {
      "$ref": "#/definitions/videoSources"
    },
    "description": {
      "type": "string",
      "maxLength": 420
    }
  },
  "definitions": {
    "IPFSUrl": {
      "type": "string",
      "pattern": "^ipfs://.+",
      "maxLength": 150
    },
    "positiveInteger": {
      "type": "integer",
      "minimum": 1
    },
    "videoMetadata": {
      "type": "object",
      "properties": {
        "src": {
          "$ref": "#/definitions/IPFSUrl"
        },
        "mimeType": {
          "type": "string",
          "maxLength": 50
        },
        "width": {
          "$ref": "#/definitions/positiveInteger"
        },
        "height": {
          "$ref": "#/definitions/positiveInteger"
        },
        "size": {
          "$ref": "#/definitions/positiveInteger"
        },
        "duration": {
          "$ref": "#/definitions/positiveInteger"
        }
      },
      "required": ["src", "mimeType", "width", "height", "duration"]
    },
    "videoSources": {
      "type": "object",
      "properties": {
        "original": {
          "$ref": "#/definitions/videoMetadata"
        },
        "alternatives": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/videoMetadata"
          }
        }
      },
      "required": ["original"]
    }
  }
}
